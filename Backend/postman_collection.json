{
  "info": {
    "name": "FleetFlow - Quick",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\"name\":\"Postman User\",\"email\":\"postman@fleet.local\",\"password\":\"pass1234\",\"role\":\"Dispatcher\"}" },
        "url": { "raw": "http://localhost:3000/api/auth/register", "host": ["http://localhost:3000"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": { "mode": "raw", "raw": "{\"email\":\"postman@fleet.local\",\"password\":\"pass1234\"}" },
        "url": { "raw": "http://localhost:3000/api/auth/login", "host": ["http://localhost:3000"], "path": ["api","auth","login"] }
      }
    },
    {
      "name": "Create Vehicle (use token)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": { "mode": "raw", "raw": "{\"name\":\"PM Truck\",\"license_plate\":\"PM-001\",\"max_capacity\":1200}" },
        "url": { "raw": "http://localhost:3000/api/vehicles", "host": ["http://localhost:3000"], "path": ["api","vehicles"] }
      }
    }
  ]
}
